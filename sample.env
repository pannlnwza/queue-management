# Copy this file to .env and edit the values

# Django SECRET_KEY (replace `your_secret_key_values_without_quotes` with a real key)
# Generate it using:
# `from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())`
SECRET_KEY=your_secret_key_values_without_quotes

# Debug mode (set to True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated, wildcard "*" can be used for development)
ALLOWED_HOSTS=localhost,127.0.0.1,::1,testserver

# Timezone for your application
TIME_ZONE=Asia/Bangkok

# Google OAuth credentials (replace these with your actual values or leave blank if unused)
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Email configuration
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@example.com

# PostgreSQL database configuration
DATABASE_NAME=test_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
